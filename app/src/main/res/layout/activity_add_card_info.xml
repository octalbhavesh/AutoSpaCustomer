
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        tools:context=".Activity.AddCardInfoActivity">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/skybluecolor">

            <ImageView
                android:id="@+id/backIv"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/back_icon" />

            <com.poshwash.android.customViews.CustomTexViewBold
                android:id="@+id/heading_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/backIv"
                android:gravity="center|start"
                android:padding="10dp"
                android:text="@string/add_card"
                android:textColor="@color/whitecolor"
                android:textSize="20sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/ic_master" />

            <com.poshwash.android.customViews.CustomTexView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Card details"
                android:textColor="@color/blackcolor"
                android:textSize="@dimen/_15sdp" />

            <com.poshwash.android.customViews.CustomEditText
                android:id="@+id/et_holder_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:hint="Holder name"
                android:inputType="text"
                android:singleLine="true" />

            <com.poshwash.android.customViews.CustomEditText
                android:id="@+id/et_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:hint="Card Number"
                android:inputType="number"
                android:maxLength="16" />

            <com.poshwash.android.customViews.CustomEditText
                android:id="@+id/et_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:hint="MM/YY"
                 />

            <com.poshwash.android.customViews.CustomButtonBold
                android:id="@+id/btn_add_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/background_button"
                android:padding="@dimen/_10sdp"
                android:text="@string/add_card"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
