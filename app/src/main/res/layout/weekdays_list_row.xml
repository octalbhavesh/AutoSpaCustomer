<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.poshwash.android.customViews.CustomTexViewRegular
            android:id="@+id/week_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/check_img"
            android:text=" dadfdf"
            android:textColor="@color/graycolor"
            android:textSize="@dimen/textsize_14" />

        <ImageView
            android:id="@+id/check_img"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/uncheck"
            android:visibility="visible" />

    </RelativeLayout>

    <com.poshwash.android.customViews.CustomTexViewRegular
        android:id="@+id/addNewLocationTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/topView"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/add_new_location"
        android:textColor="@color/greencolor"
        android:textSize="@dimen/_15sdp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/addLocationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/addNewLocationTv"
        android:visibility="gone">

        <com.poshwash.android.customViews.CustomTexViewRegular
            android:id="@+id/spi_vehiclelocation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/recentaglecornor"
            android:focusable="false"
            android:hint="@string/enter_location"
            android:maxLines="1"
            android:padding="@dimen/_10sdp"
            android:textColorHint="@color/texthintcolor"
            android:textSize="@dimen/_12sdp"
            android:visibility="visible" />

        <com.poshwash.android.customViews.CustomTexViewBold
            android:id="@+id/addLocationTv"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/mybuttonsubmit"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/add"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />
    </RelativeLayout>


</RelativeLayout>