<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/vehicleIv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/aboutusbanner" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_80sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shedow_background"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp" />

            <com.poshwash.android.customViews.CustomTexViewRegular
                android:id="@+id/vehicleNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/whitecolor"
                android:textSize="@dimen/_16sdp" />

            <com.poshwash.android.customViews.CustomTexViewRegular
                android:id="@+id/vehicleNumberTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/shedow_background"
                android:text=""
                android:textColor="@color/whitecolor"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/colorLl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="end"
            android:orientation="horizontal">

            <com.poshwash.android.customViews.CustomTexViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color"
                android:visibility="gone"
                android:textColor="@color/whitecolor"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" :"
                android:visibility="gone"
                android:textColor="@color/whitecolor"
                android:textSize="@dimen/_16sdp" />

            <com.poshwash.android.customViews.CustomTexViewRegular
                android:id="@+id/colorTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@drawable/shedow_background"
                android:text=""
                android:textColor="@color/whitecolor"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>