<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="horizontal"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/vehicleIv"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/aboutusbanner" />

    <com.poshwash.android.customViews.CustomTexViewRegular
        android:id="@+id/vehicleNameTv"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_toEndOf="@+id/vehicleIv"
        android:layout_toStartOf="@+id/vehicleCountTv"
        android:gravity="left"
        android:maxLines="1"
        android:textColor="@color/graycolor"
        android:textSize="@dimen/textsize_16"
        android:textStyle="bold" />

    <com.poshwash.android.customViews.CustomTexViewRegular
        android:id="@+id/vehicleCountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/graycolor"
        android:textSize="@dimen/textsize_16"
        android:textStyle="bold" />

</RelativeLayout>