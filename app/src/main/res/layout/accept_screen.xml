<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#99000000"
    android:gravity="center"
    android:orientation="vertical">

    <com.poshwash.android.customViews.CustomTexViewBold
        android:id="@+id/txt_carname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center"
        tools:text="Audi S4"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold" />


    <com.poshwash.android.customViews.CustomTexViewBold
        android:id="@+id/txt_viewdeatil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center"
        android:text="@string/view_detail"
        android:textColor="@color/greencolor"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_250sdp">

        <ProgressBar
            android:id="@+id/circular_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_250sdp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/circuler_progressbar" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_230sdp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_bg_balck" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_staticmap"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/staticmap" />
    </RelativeLayout>

    <com.poshwash.android.customViews.CustomTexViewBold
        android:id="@+id/txt_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        tools:text="5 Minute"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <com.poshwash.android.customViews.CustomTexViewRegular
        android:id="@+id/txt_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="350 th Ave \nNew York 10118 USA"
        android:textColor="@color/white" />

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"
        app:mrl_rippleAlpha="0.1"
        app:mrl_rippleColor="@color/white"
        app:mrl_rippleDelayClick="true"
        app:mrl_rippleDimension="10dp"
        app:mrl_rippleDuration="350"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleRoundedCorners="@dimen/_30sdp"
        app:mrl_ripplePersistent="false">

        <com.poshwash.android.customViews.CustomButtonBold
            android:id="@+id/btn_accept"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/mybuttonsubmit"
            android:text="@string/accept"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

    </com.balysv.materialripple.MaterialRippleLayout>


</LinearLayout>