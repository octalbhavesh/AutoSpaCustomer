<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rowLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/img_car"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_centerVertical="true"
            android:background="@drawable/recentgleimageview"
            android:scaleType="centerCrop"
            android:src="@drawable/aboutusbanner" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_toEndOf="@+id/img_car"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal">

                <com.poshwash.android.customViews.CustomTexViewBold
                    android:id="@+id/txt_carname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_cancel"
                    android:ellipsize="marquee"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="Mercury Cougar"
                    android:textColor="@color/signup_btn"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:src="@drawable/cross"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:gravity="center|start">

                <com.poshwash.android.customViews.CustomTexViewRegular
                    android:id="@+id/txt_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="1"
                    android:text="Robin"
                    android:textSize="@dimen/_11sdp" />

                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                    android:id="@+id/rating_bar"
                    style="@style/Widget.MaterialRatingBar.RatingBar"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:isIndicator="true"
                    android:maxHeight="48dp"
                    android:visibility="gone"
                    android:minHeight="15dp"
                    android:numStars="5"
                    android:rating="3"
                    app:mrb_progressTint="@color/ratingbar"
                    app:mrb_secondaryProgressTint="@color/ratingbar" />

                <com.poshwash.android.customViews.CustomTexViewBold
                    android:id="@+id/txt_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:gravity="left"
                    android:text="$100"
                    android:visibility="gone"
                    android:textColor="@color/greencolor"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

            </LinearLayout>

            <com.poshwash.android.customViews.CustomTexViewRegular
                android:id="@+id/txt_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:gravity="left"
                android:text="20/06/2019 10:15 Am" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp">

                <com.poshwash.android.customViews.CustomTexViewRegular
                    android:id="@+id/status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Completed"
                    android:textColor="@color/greencolor"
                    android:visibility="visible" />

                <com.poshwash.android.customViews.CustomTexViewRegular
                    android:id="@+id/viewDeatilTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="left"
                    android:text="@string/view_detail"
                    android:textColor="@color/greencolor"
                    android:visibility="gone" /><!--dynamic data gone-->

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightdarkgraycolor" />
</LinearLayout>