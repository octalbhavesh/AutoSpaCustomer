<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ripplealreay"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jf_flat_regular"
            android:text="SUV" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jf_flat_regular"
            android:text="Normal" />


    </RadioGroup>

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripplealreay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_10sdp"
        app:mrl_rippleAlpha="0.1"
        app:mrl_rippleColor="@color/white"
        app:mrl_rippleDelayClick="true"
        app:mrl_rippleDimension="10dp"
        app:mrl_rippleDuration="350"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true"
        app:mrl_ripplePersistent="false"
        app:mrl_rippleRoundedCorners="@dimen/_30sdp">

    <com.poshwash.android.customViews.CustomButtonBold
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mybuttonsubmit"
        android:text="@string/submit"
        android:textAllCaps="false"
        android:fontFamily="@font/jf_flat_regular"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp" />

    </com.balysv.materialripple.MaterialRippleLayout>

</RelativeLayout>